<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="open_product_by_attribute_set_view" model="ir.ui.view">
        <field name="name">open.product.by.attribute.set.view</field>
        <field name="model">open.product.by.attribute.set</field>
        <field name="arch" type="xml">
            <form string="Open product by attributes set">
                <group>
                    <field
                        name="attribute_set_id"
                        domain="[('model_id.model', '=', 'product.template')]"
                    />
                </group>
                <footer>
            <button
                        name="button_open_product_by_attribute_set"
                        string="Open Product by Attribute Set"
                        type="object"
                        class="oe_highlight"
                    />
            or
            <button special="cancel" string="Cancel" class="oe_link" />
          </footer>
            </form>
        </field>
    </record>
    <!-- TODO : isn't it possible to add a selection field in the products Filter menu instead ? -->
    <record id="open_product_by_attribute_set" model="ir.actions.act_window">
        <field name="name">Open Product by Attribute Set</field>
        <field name="res_model">open.product.by.attribute.set</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="open_product_by_attribute_set_view" />
        <field name="help" />
    </record>
    <menuitem
        action="open_product_by_attribute_set"
        id="open_product_wizard"
        parent="sale.product_menu_catalog"
        sequence="60"
    />
</odoo>
