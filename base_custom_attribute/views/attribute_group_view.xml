<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="attribute_group_form_view" model="ir.ui.view">
            <field name="model">attribute.group</field>
            <field name="arch" type="xml">
                <form string="Attribute Group">
                    <group>
                        <field name="name" string="Group name" class="oe_inline"/>
                        <field name="sequence" string="Sequence in Set" class="oe_inline"/>
                        <field name="model_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="attribute_ids" colspan="4"
                            context="{'default_model_id': model_id, 'default_attribute_group_id': id}">
                            <tree string="Attributes" create="true" >
                                <field name="name"/>
                                <field name="field_description"/>
                                <field name="attribute_type"/>
                                <field name="sequence" />
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record id="attribute_group_tree_view" model="ir.ui.view">
            <field name="model">attribute.group</field>
            <field name="arch" type="xml">
                <tree string="Attribute Group">
                    <field name="name"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

</odoo>
